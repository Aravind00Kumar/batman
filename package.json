{
  "name": "batman",
  "version": "v1.0.0-alpha.1",
  "description": "UI Components in vanilla js (TypeScript)",
  "main": "demo/scripts/batman.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "webpack && concurrently \"scss src/sass/main.scss:demo/css/batman.css --watch\" \"scss demo/sass/main.scss:demo/css/main.css --watch\" \"webpack -w\" \"lite-server\" ",
    "lite": "lite-server",
    "docs": "typedoc --out documentation/ src/ --name batman --readme readme.md --hideGenerator",
    "commit" : "git cz"
  },
  "keywords": [
    "Batman"
  ],
  "author": "Aravind Kumar P",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "lite-server": "^2.3.0",
    "ts-loader": "^2.1.0",
    "webpack": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://code.siemens.com:aravind.pampana/batman.git#commit-ish"
  }
}